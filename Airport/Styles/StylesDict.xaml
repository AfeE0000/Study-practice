<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Airport.Styles">
    <Style x:Key="LoginFormStyle">
        <Setter Property="ItemsControl.FontSize" Value="20"/>
        <Setter Property="ItemsControl.FontStyle" Value="Normal"/>
        <Setter Property="ItemsControl.FontFamily" Value="Times New Roman"/>
        <Setter Property="ItemsControl.HorizontalAlignment" Value="Stretch"/>
        <Setter Property="ItemsControl.VerticalAlignment" Value="Stretch"/>
        <Setter Property="ItemsControl.HorizontalContentAlignment" Value="Center"/>
        <Setter Property="ItemsControl.VerticalContentAlignment" Value="Center"/>
        <Setter Property="ItemsControl.Width" Value="Auto"/>
        <Setter Property="ItemsControl.Height" Value="Auto"/>
        <Setter Property="ItemsControl.Margin" Value="5"/>
    </Style>

</ResourceDictionary>